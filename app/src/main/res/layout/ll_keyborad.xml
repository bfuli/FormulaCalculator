<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:shrinkColumns="0,1,2,3,4">
        <!--第一行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_sin"
                style="@style/ButtonCommon"
                android:layout_marginTop="0dp"
                android:text="sin" />

            <Button
                android:id="@+id/btn_chengfang"
                style="@style/ButtonCommon"
                android:layout_marginTop="0dp"
                android:text="^" />

            <Button
                android:id="@+id/btn_kaifang"
                style="@style/ButtonCommon"
                android:layout_marginTop="0dp"
                android:text="√" />

            <Button
                android:id="@+id/btn_pi"
                style="@style/ButtonCommon"
                android:layout_marginTop="0dp"
                android:text="π" />

            <Button
                android:id="@+id/btn_clear"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="C"
                android:textColor="@color/colorkeyBoardClear" />
        </TableRow>

        <!--第二行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_cos"
                style="@style/ButtonCommon"
                android:text="cos" />

            <Button
                android:id="@+id/btn_zuokuo"
                style="@style/ButtonCommon"
                android:text="(" />

            <Button
                android:id="@+id/btn_youkuo"
                style="@style/ButtonCommon"
                android:text=")" />

            <Button
                android:id="@+id/btn_e"
                style="@style/ButtonCommon"
                android:text="e" />

            <ImageButton
                android:id="@+id/btn_del"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:src="@mipmap/btn_pad_del_n" />
        </TableRow>

        <!--第三行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_tan"
                style="@style/ButtonCommon"
                android:text="tan" />

            <Button
                android:id="@+id/btn_7"
                style="@style/ButtonCommon"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/ButtonCommon"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/ButtonCommon"
                android:text="9" />

            <ImageButton
                android:id="@+id/btn_add"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:src="@mipmap/btn_pad_plus_n" />
        </TableRow>

        <!--第四行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_ln"
                style="@style/ButtonCommon"
                android:text="ln" />

            <Button
                android:id="@+id/btn_4"
                style="@style/ButtonCommon"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/ButtonCommon"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/ButtonCommon"
                android:text="6" />

            <ImageButton
                android:id="@+id/btn_minus"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:src="@mipmap/btn_pad_minus_n" />
        </TableRow>

        <!--第五行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_lg"
                style="@style/ButtonCommon"
                android:text="lg" />

            <Button
                android:id="@+id/btn_1"
                style="@style/ButtonCommon"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/ButtonCommon"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/ButtonCommon"
                android:text="3" />

            <ImageButton
                android:id="@+id/btn_mult"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:src="@mipmap/btn_pad_mul_n" />
        </TableRow>


        <!--第六行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_asin"
                style="@style/ButtonCommon"
                android:text="asin" />

            <Button
                android:id="@+id/btn_0"
                style="@style/ButtonCommon"
                android:text="0" />

            <ImageButton
                android:id="@+id/btn_dot"
                style="@style/ButtonCommon"
                android:src="@mipmap/btn_pad_dot_n" />

            <Button
                android:id="@+id/btn_ok"
                style="@style/ButtonCommon"
                android:text="保存"
                android:textColor="@color/colorkeyBoardClear"/>

            <ImageButton
                android:id="@+id/btn_div"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:src="@mipmap/btn_pad_div_n" />
        </TableRow>
        <!--第七行-->
        <TableRow style="@style/TableRowCommon">

            <Button
                android:id="@+id/btn_acos"
                style="@style/ButtonCommon"
                android:text="acos" />

            <Button
                android:id="@+id/btn_atan"
                style="@style/ButtonCommon"
                android:text="atan" />

            <Button
                android:id="@+id/btn_ans"
                style="@style/ButtonCommon"
                android:text="Ans" />

            <!--等于 计算符号-->
            <Button
                android:id="@+id/btn_equal"
                style="@style/ButtonCommon"
                android:layout_marginRight="0dp"
                android:layout_span="2"
                android:text="＝"
                android:textColor="@color/colorkeyBoardClear"/>
        </TableRow>

        <!--第八行 用来显示未知数-->
        <TableRow style="@style/TableRowCommon"
            android:id="@+id/tr_unknow1"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_x1"
                style="@style/ButtonCommon"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x2"
                style="@style/ButtonCommon"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x3"
                style="@style/ButtonCommon"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x4"
                style="@style/ButtonCommon"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x5"
                style="@style/ButtonCommon"
                android:visibility="gone" />
        </TableRow>
        <!--第九行 用来显示未知数-->
        <TableRow style="@style/TableRowCommon"
            android:id="@+id/tr_unknow2"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_x6"
                style="@style/ButtonCommon"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x7"
                style="@style/ButtonCommon"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x8"
                style="@style/ButtonCommon"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x9"
                style="@style/ButtonCommon"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_x10"
                style="@style/ButtonCommon"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>
</LinearLayout>