<resources>

    <!-- Base application theme. -->
    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="ButtonCommon">
        <!--键盘按键-->
        <item name="android:layout_height">@dimen/keyboard_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:onClick">btnOnClick</item>
        <item name="android:textSize">@dimen/textsize_bigger</item>
        <item name="android:textColor">@color/colorKeyboardText</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/btn_keyboard_bac</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">side_onClick</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ET_MatixStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:minWidth">346dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/et_bc_canfocused</item>
        <item name="android:gravity">top|start</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="HexTransEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_blank_size</item>
        <item name="android:layout_marginRight">@dimen/common_blank_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/et_bc_canfocused</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:lines">2</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TableRowCommon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DialogAnim" parent="">
        <item name="android:windowEnterAnimation">@anim/dialog_pop</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="AppThemes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
